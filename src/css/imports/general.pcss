:root {
  --blue: #14a9ff;
  --dark: #171a1c;
  --white: #ffffff;
  --dark-blue: #1d5677;
}

html {
  width: 100vw;
  min-height: 100vh;
}
body {
  width: 100%;
  height: 100%;
  background-color: var(--dark);
  color: var(--white);
}

.wrapper {
  width: 100%;
  padding: 10px 100px;
  text-align: center;
  margin: 0 auto;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
}
